<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Asasuzume.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Asasuzume.Views.DiscardView"
             x:DataType="vm:DiscardViewModel">

    <Design.DataContext>
        <vm:DiscardViewModel />
    </Design.DataContext>

	<ItemsControl HorizontalAlignment="Center"
				  ItemsSource="{Binding Items}">
		<ItemsControl.ItemsPanel>
			<ItemsPanelTemplate>
				<WrapPanel Orientation="Horizontal" VerticalAlignment="Bottom"/>
			</ItemsPanelTemplate>
		</ItemsControl.ItemsPanel>
		<ItemsControl.ItemTemplate>
			<DataTemplate>
				<Border Height="100" BorderBrush="Gray" BorderThickness="1" Margin="5" CornerRadius="3">
					<Svg Path="{Binding ImagePath}"/>
				</Border>
			</DataTemplate>
		</ItemsControl.ItemTemplate>
	</ItemsControl>
</UserControl>
